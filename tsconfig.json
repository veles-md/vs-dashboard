{
  "compilerOptions": {
    "esModuleInterop": true,
    "incremental": true,
    "moduleResolution": "node",
    "target": "es6",
    "jsx": "react",
    "outDir": "dist",
    "rootDir": "./src",
    "lib": ["es6", "dom"]
  },
  "include": ["./src"],
  "exclude": ["node_modules", "dist"],
  "awesomeTypescriptLoaderOptions": {
    "reportFiles": ["./src/**/*"]
  }
}
