{
  "compilerOptions": {
    "esModuleInterop": true,
    "incremental": true,
    "moduleResolution": "node",
    "target": "es6",
    "jsx": "react",
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "src",
    "lib": ["es6", "dom"],
    "paths": {
      "components/*": ["components/*"],
      "pages/*": ["pages/*"],
      "utils/*": ["utils/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"],
  "awesomeTypescriptLoaderOptions": {
    "reportFiles": ["src/**/*"]
  }
}
